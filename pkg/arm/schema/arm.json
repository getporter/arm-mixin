{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "installStep": {
      "type": "object",
      "properties": {
        "arm": {
          "type": "object",
          "properties": {
            "description": {
              "$ref": "#/definitions/stepDescription"
            },
            "name": {
              "type": "string"
            },
            "type": {
              "type": "string"
            },
            "template": {
              "type": "string"
            },
            "resourceGroup": {
              "type": "string"
            },
            "parameters": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false,
          "required": [
            "name",
            "description",
            "type",
            "template"
          ]
        }
      },
      "required": [
        "arm"
      ],
      "additionalProperties": false
    },
    "upgradeStep": {
      "$ref": "#/definitions/unimplementedStep"
    },
    "uninstallStep": {
      "$ref": "#/definitions/unimplementedStep"
    },
    "unimplementedStep": {
      "type": "object",
      "properties": {
        "arm": {
          "type": "object",
          "properties": {
            "description": {
              "$ref": "#/definitions/stepDescription"
            }
          },
          "additionalProperties": false,
          "required": [
            "description"
          ]
        }
      },
      "required": [
        "arm"
      ]
    },
    "stepDescription": {
      "type": "string",
      "minLength": 1
    }
  },
  "type": "object",
  "properties": {
    "install": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/installStep"
      }
    },
    "upgrade": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/upgradeStep"
      }
    },
    "uninstall": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/uninstallStep"
      }
    }
  },
  "additionalProperties": false
}
